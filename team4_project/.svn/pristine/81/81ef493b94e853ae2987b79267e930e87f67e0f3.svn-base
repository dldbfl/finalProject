//메세지 보내기
$('#sendMsg').on('click',function(){
	  var writer = $('input[id="messenger_receiver"]').val();
	  var title =  $('input[id="messenger_title"]').val()+'';
	  var content =  $('#messenger_content').val()+'';
	  
	  if(title.length == 0){
		  alert('제목을 입력해 주세요');
		  return;
	  }
	  
	  if(title.length > 30 || content.legnth > 500){
		  alert('제목은 30자 내용은 500자 미만으로 해주세요');
		  return;
		  
	  }else{
	$.ajax({
		url : "<%=request.getContextPath()%>/message/getId",
			type : "post",
			data: JSON.stringify(writer),
			contentType: "application/json; charset=utf-8;",
            dataType: "json",
            success:function(res){
    			if(res == 0){
    				alert('존재하지 않는 사용자 입니다 다시 확인해 주세요');
    				
    			}else{
    				
    				var form = $('#messengerForm')[0];
    				  var formData = new FormData(form);
    				  
    				   $.ajax({
    				        type: "POST",
    				        enctype: 'multipart/form-data',
    				        url: "<%=request.getContextPath()%>/message/message_send",
    				        data: formData,
    				        processData: false,
    				        contentType: false,
    				        cache: false,
    				        success: function (data) {
    				        	
    				        	if(data == 'MAX'){
    				        		alert("파일 용량은 50MB 까지 입니다.");
    				        	}else{
    				        	
    				            alert('쪽지를 전송했습니다.');
    				            location.href = "#";
    				            location.reload(true);
    				        	} 
    				            
    				        },
    				        error: function (e) {
    				           
    				            
    				        }
    				  });
    				
    				
    			}
    		},
    		error:function(res){
 	
    		}
		});
	  }
});

	

